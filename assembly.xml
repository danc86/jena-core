<assembly>
  <!--<id>dist</id>-->
  <baseDirectory>Jena-${project.version}</baseDirectory>
  <formats>
    <!-- Remove while testing (slow upload!) -->
    <!--<format>tar.gz</format>-->
    <format>zip</format>
  </formats>
  
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>test</scope>
      <outputDirectory>/lib</outputDirectory>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <includes>
        <include>copyright.txt</include>
        <include>INSTALL.txt</include>
        <include>readme.html</include>
        <include>README.txt</include>
        <include>ReleaseNotes.txt</include>
      </includes>
    </fileSet>

    <!-- lib directory -->
    <!-- copy the ARQ dependences not copied by the dependencySet above
         Assumes ARQ is not in the dependency set for jena
      -->
    <fileSet>
      <directory>${project.basedir}/lib</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>arq-*</include>
        <include>lucene-*</include>
        <include>stax-api-*</include>
        <include>wstx-asl-*</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>jena-${project.version}-tests.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>jena-${project.version}-sources.jar</include>
        <include>jena-${project.version}-javadoc.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>testing</directory>
    </fileSet>

    <fileSet>
      <includes>
        <include>test.sh</include>
        <include>test.bat</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>bat</directory>
    </fileSet>

    <fileSet>
      <directory>bin</directory>
    </fileSet>

    <fileSet>
      <directory>doc</directory>
      <excludes>
        <exclude>release</exclude>
        <exclude>linkcheck</exclude>
        <exclude>produce</exclude>
        <exclude>merge</exclude>
        <exclude>template.html</exclude>
        <exclude>**/_*/**</exclude>
        <exclude>**/desktop.ini</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>src-examples</directory>
    </fileSet>

    <fileSet>
      <directory>${project.build.directory}/apidocs</directory>
      <outputDirectory>doc/javadoc</outputDirectory>
    </fileSet>

  </fileSets>

</assembly>
