<project name="Jena maven" default="default">
    <description>
            Generate Jena2 maven artifacts
    </description>

    <property name="jena2.source.dir" value="../src" />

    <!-- =================================
          target: default
         ================================= -->
    <target name="default" depends="clean, copy-source" description="--> Generate Jena2 maven artifacts">

    </target>

    <target name="clean">
      <delete dir="jena/src" quiet="true" />
      <delete dir="jenatest/src" quiet="true" />
      <mkdir dir="jena/src" />
      <mkdir dir="jenatest/src" />
    </target>

    <target name="copy-source">
      <copy todir="jena/src" >
        <fileset dir="${jena2.source.dir}" excludes="**/test/,**/regression/,**/acceptance/,**/junit/,**/oldCode/"/>
      </copy>
      <copy todir="jenatest/src" >
        <fileset dir="${jena2.source.dir}" includes="**/test/,**/regression/,**/acceptance/,**/junit/,**/oldCode/"/>
      </copy>
    </target>
</project>
